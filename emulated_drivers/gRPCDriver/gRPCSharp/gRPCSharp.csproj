<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.11.2" />
    <PackageReference Include="Grpc" Version="2.25.0" />
    <PackageReference Include="Grpc.Tools" Version="2.25.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <Protobuf Include="../proto/**/*.proto" ProtoRoot="../proto/" OutputDir="protobuf/%(RelativePath)" GrpcOutputDir="gRPC/%(RelativePath)" CompileOutputs="false" GrpcServices="Both" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="gRPC\" />
    <Folder Include="protobuf\" />
  </ItemGroup>

</Project>
